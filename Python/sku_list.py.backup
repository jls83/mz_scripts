#!/usr/bin/env python

import datetime

dict = {}

today = datetime.datetime.today()

if today.strftime('%m')[0] == '1':
	month = today.strftime('%m')
else:
	month = today.strftime('%m')[1]

if today.strftime('%d')[0] == '1':
	day = today.strftime('%d')
else:
	day = today.strftime('%d')[1]

date = month + '-' + day

sku_input = raw_input("Enter SKU Number: ")

file_desc = 'C:\Users\JSanders\Documents\Posted\Descriptions ' + date + '.txt'

if sku_input not in open(file_desc).read():
	date = raw_input("Description date (m-d format): ")

file_list = 'C:\Users\JSanders\Documents\Posted\Lists ' + date + '.html'
file_desc = 'C:\Users\JSanders\Documents\Posted\Descriptions ' + date + '.txt'

lists = open(file_list)
list = lists.read()
