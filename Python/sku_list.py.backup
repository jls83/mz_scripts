for i in desc:
	sku_header, sku_desc = i.split('\n\n')
	sku_num, sku_title = sku_header.split(' - ')
	dict[sku_num] = sku_title
	dict[sku_num] = dict[sku_num], sku_desc

for i in list:
	sku_num, sku_list = i.split('\n\n<u')
	sku_list = '<u' + sku_list
	if dict.has_key(sku_num):
		dict[sku_num] = dict[sku_num], sku_list
	else:
		dict[sku_num] = sku_list



sku_info = dict[sku_input]
sku_title_desc = sku_info[0]
local_sku_title = sku_title_desc[0]
